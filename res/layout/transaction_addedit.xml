<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="8dip"
            android:paddingTop="5dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <AutoCompleteTextView
                    android:id="@+id/aeTrsnDesc"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Description"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@android:color/primary_text_light" >
                </AutoCompleteTextView>

                <Button
                    android:id="@+id/aeTrsnAcctBttn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:ellipsize="end"
                    android:text="" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/aeTrsnLinkAcctBttn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/aeTrsnLinkAcctBttn_icon"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_margin="5dip" >
                </ImageView>

                <TextView
                    android:id="@+id/aeTrsnLinkAcctBttn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="N/A" >
                </TextView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Transfer To..."
                    android:textSize="12sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/aeTrsnType"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:scaleType="fitCenter" />

                <EditText
                    android:id="@+id/aeTrsnAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:imeOptions="actionDone"
                    android:numeric="integer|decimal"
                    android:selectAllOnFocus="true"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/aeTrsnDateTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_margin="5dip"
                    android:src="@drawable/calendar" >
                </ImageView>

                <TextView
                    android:id="@+id/aeTrsnDateTime_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="DateTime Button" >
                </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/aeTrsnCategory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="Category Button" >
            </Button>

            <LinearLayout
                android:id="@+id/aeTrsnCheckNumHolder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/aeTrsnCheckNum"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:hint="# (optional)"
                    android:imeOptions="actionDone"
                    android:numeric="integer"
                    android:singleLine="true" >
                </EditText>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="2dip"
                    android:layout_weight="0.1"
                    android:text=" " >
                </TextView>

                <TextView
                    android:id="@+id/aeTrsnCheckNumLbl"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text="Check Number" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/aeTrsnCleared"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textOff="Pending"
                    android:textOn="Cleared" >
                </ToggleButton>

                <TextView
                    android:id="@+id/aeTrsnClearedLbl"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:text="Cleared Status" >
                </TextView>
            </LinearLayout>

            <EditText
                android:id="@+id/aeTrsnNotes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Transactions Notes"
                android:minLines="10"
                android:singleLine="false" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom" >

        <Button
            android:id="@+id/aeTrsnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/aeTrsnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Delete" />

        <Button
            android:id="@+id/aeTrsnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@android:string/cancel" />
    </LinearLayout>

</FrameLayout>