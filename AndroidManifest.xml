<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.glitchtechscience.gtcheckbook"
	android:versionName="0.6.65"
	android:versionCode="20">
	<uses-sdk
		android:minSdkVersion="7" />
	<uses-permission
		android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission
		android:name="com.android.vending.CHECK_LICENSE"></uses-permission>
	<application
		android:debuggable="false"
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:theme="@android:style/Theme.Light.NoTitleBar"
		android:name="checkbook">
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:name="splash">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
				<category
					android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:name="accounts"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity
			android:name="importData"
			android:theme="@android:style/Theme.Light"
			android:label="Import Data"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity
			android:name="exportData"
			android:theme="@android:style/Theme.Light"
			android:label="Export Data"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity
			android:name="accounts_AddEdit"
			android:configChanges="keyboardHidden|orientation"
			android:label="Account Control"
			android:theme="@android:style/Theme.Light"
			android:windowSoftInputMode="stateHidden"></activity>
		<activity
			android:name="help"
			android:label="GlitchTech Checkbook Help"
			android:theme="@android:style/Theme.Light"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name="transactions"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name="transaction_AddEdit"
			android:configChanges="keyboardHidden|orientation"
			android:label="Transaction Control"
			android:theme="@style/Theme.Light.Workaround"></activity>
		<activity
			android:name="preferences"
			android:configChanges="keyboardHidden|orientation"
			android:label="Preferences"
			android:theme="@android:style/Theme"></activity>
		<activity
			android:name="transcat"
			android:configChanges="keyboardHidden|orientation"
			android:label="Transaction Categories"
			android:theme="@android:style/Theme"></activity>
		<activity
			android:name="transcat_AddEdit"
			android:configChanges="keyboardHidden|orientation"
			android:label="Transaction Category Control"
			android:theme="@android:style/Theme"></activity>
		<activity
			android:name="acctcat"
			android:configChanges="keyboardHidden|orientation"
			android:label="Account Categories"
			android:theme="@android:style/Theme"></activity>
		<activity
			android:name="acctcat_AddEdit"
			android:configChanges="keyboardHidden|orientation"
			android:label="Account Category Control"
			android:theme="@android:style/Theme"></activity>
	</application>
</manifest>